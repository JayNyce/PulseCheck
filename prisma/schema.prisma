generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                        Int      @id @default(autoincrement())
  name                      String
  email                     String   @unique
  password                  String
  resetPasswordToken        String?  // Optional reset token
  resetPasswordTokenExpiry  DateTime?  // Optional expiry time
  feedbacksFrom              Feedback[] @relation("FeedbackFromUser")
  feedbacksTo                Feedback[] @relation("FeedbackToUser")
}

model Feedback {
  id          Int      @id @default(autoincrement())
  from_user   User     @relation("FeedbackFromUser", fields: [fromUserId], references: [id])
  fromUserId  Int
  to_user     User     @relation("FeedbackToUser", fields: [toUserId], references: [id])
  toUserId    Int
  topic       String   // Changed from course_name to topic
  rating      Int
  comment     String
  created_at  DateTime @default(now())
}
