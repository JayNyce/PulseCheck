generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}


// prisma/schema.prisma

model User {
  id                       Int        @id @default(autoincrement())
  name                     String
  email                    String     @unique
  password                 String
  resetPasswordToken       String?    // Optional reset token
  resetPasswordTokenExpiry DateTime?  // Optional expiry time

  // Relations
  feedbacksFrom Feedback[] @relation("FeedbackFromUser")
  feedbacksTo   Feedback[] @relation("FeedbackToUser")
}

model Feedback {
  id          Int      @id @default(autoincrement())
  topic       String
  rating      Int
  comment     String
  created_at  DateTime @default(now())

  fromUserId  Int
  toUserId    Int

  // Relations
  fromUser User @relation("FeedbackFromUser", fields: [fromUserId], references: [id])
  toUser   User @relation("FeedbackToUser", fields: [toUserId], references: [id])
}
